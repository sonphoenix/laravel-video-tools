{
    "name": "sonphoenix/laravel-video-tools",
    "version": "0.1.0",
    "description": "A Laravel package for video processing powered by FFmpeg",
    "require": {
        "php": "^8.1",
        "php-ffmpeg/php-ffmpeg": "^1.3"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SonPhoenix\\VideoTools\\": "src/"
        }
    },
    "authors": [
        {
            "name": "son phoenix(FERRADJ OMAR)",
            "email": "sonphoenix2002@gmail.com"
        }
    ],
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^2.0"
    },
    "autoload-dev": {
        "psr-4": {
            "SonPhoenix\\VideoTools\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SonPhoenix\\VideoTools\\VideoToolsServiceProvider"
            ],
            "aliases": {
                "VideoTools": "SonPhoenix\\VideoTools\\Facades\\VideoTools"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}